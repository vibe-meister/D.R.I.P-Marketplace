# Production Environment Variables
# Copy this to .env.local for local development
# Use these in your hosting platform (Vercel, Netlify, etc.)

# Database (use production database - not SQLite)
DATABASE_URL="postgresql://username:password@host:port/database_name"

# JWT Secret (use a strong, unique secret)
JWT_SECRET="drip-marketplace-production-jwt-secret-2024"

# Base URL (your deployed domain)
NEXT_PUBLIC_BASE_URL="https://your-app.vercel.app"

# Platform Wallet (for receiving USDT payments)
PLATFORM_WALLET_ADDRESS="0x39d36a64a1e16e52d8353eff82ace7c96502f269"

# File Upload Settings
MAX_FILE_SIZE="50MB"
ALLOWED_FILE_TYPES="image/*,video/*,audio/*,.pdf,.doc,.docx"

# Security Settings
ALLOWED_ORIGINS="https://your-app.vercel.app,https://yourdomain.com"
RATE_LIMIT_WINDOW="900000"
MAX_REQUESTS_PER_WINDOW="100"
ADMIN_SECRET_KEY="drip-admin-production-secret-2024"

# Production Settings
NODE_ENV="production"
